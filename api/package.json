{
  "name": "crud-app-backend",
  "version": "1.0.0",
  "description": "CRUD App Backend - Google Reviews wrapper API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "echo \"No build step required for Node.js\"",
    "deploy": "npm run test:ci && npm run lint && npm run build",
    "deploy:staging": "npm run deploy && echo \"Deploying to staging...\"",
    "deploy:prod": "npm run deploy && echo \"Deploying to production...\"",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "install:clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "google-places",
    "reviews",
    "api",
    "nodejs",
    "express",
    "redis"
  ],
  "author": "CRUD App Team",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "redis": "^5.8.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.2.5"
  }
}
